    <style name="UIToolkit.Text.Title.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="fontWeight">500</item>
    </style>
    <style name="UIToolkit.Text.Title.Medium.BaseDark">
        <item name="android:textColor">@color/base_dark</item>
    </style>

