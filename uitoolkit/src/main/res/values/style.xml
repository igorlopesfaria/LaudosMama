<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="UIToolkit"/>
    <!--  region Buttons -->
    <style name="UIToolkit.Widget" />

    <style name="UIToolkit.Widget.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_button_primary</item>
        <item name="android:height">@dimen/height_custom_button</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@drawable/text_color_button_primary</item>
        <item name="android:textSize">@dimen/text_button_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="UIToolkit.Widget.Button.Secondary">
        <item name="android:background">@drawable/background_button_secondary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/base_dark</item>
    </style>
    <style name="UIToolkit.Widget.Button.Transparent">
        <item name="android:background">@drawable/background_button_transparent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/base_dark</item>
        <item name="android:paddingStart">@dimen/space_view_extra_big</item>
        <item name="android:paddingEnd">@dimen/space_view_extra_big</item>
    </style>

