    </style>


    <!-- region InputLayout -->
    <style name="UIToolkit.Widget.BaseTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingEnd">@dimen/space_view_zero</item>
        <item name="android:paddingRight">@dimen/space_view_zero</item>
        <item name="android:paddingStart">@dimen/space_view_zero</item>
        <item name="android:paddingLeft">@dimen/space_view_zero</item>
        <item name="editTextStyle">@style/UIToolkit.Widget.TextInputEditText</item>
        <item name="errorTextAppearance">@style/UIToolkit.Widget.TextErrorAppearance</item>
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="UIToolkit.Widget.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/base_dark</item>
        <item name="android:textColorHint">@color/base_25</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:paddingEnd">@dimen/space_view_zero</item>
        <item name="android:paddingStart">@dimen/space_view_zero</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>
    
    <style name="UIToolkit.Widget.TextErrorAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/status_alert</item>
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>


    <style name="UIToolkit.Widget.Toolbar.White" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="titleTextAppearance">@style/UIToolkit.Widget.Toolbar.White.Title</item>
    </style>
    <style name="UIToolkit.Widget.Toolbar.White.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/main_purple</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="UIToolkit.Widget.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/base_dark</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:background">@drawable/background_edittext</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:paddingEnd">@dimen/space_view_medium</item>
        <item name="android:paddingStart">@dimen/space_view_medium</item>
    </style>


</resources>