<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/empty_view"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/empty_image"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toTopOf="@+id/empty_message_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/space_view_medium"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="empty2.json" />

    <TextView
        android:id="@+id/empty_message_title"
        style="@style/UIToolkit.Text.Subtitle.Medium.GrayBaseDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:gravity="center"
        android:layout_marginStart="@dimen/space_view_medium"
        android:layout_marginEnd="@dimen/space_view_medium"
        tools:text="Você não tem nenhum item cadastrado" />

    <TextView
        android:id="@+id/empty_message_subtitle"
        style="@style/UIToolkit.Text.Body.Regular.GrayBase75"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_view_medium"
        android:layout_marginEnd="@dimen/space_view_medium"
        android:layout_marginTop="@dimen/space_view_small"
        android:gravity="center"
        tools:text="Verifique sua internet e tente novamente" />

</LinearLayout>
