<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/space_view_medium"
    android:background="@color/base_5">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/profileImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/space_view_medium"
        android:src="@drawable/ic_woman" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nameTextView"
        style="@style/UIToolkit.Text.Body.Medium.GrayBase75"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_view_medium"
        android:layout_marginEnd="@dimen/space_view_medium"
        android:text="Pryscilla Alves Ferreira"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profileImageView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:viewBindingIgnore="true"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ageTextView"
        style="@style/UIToolkit.Text.Caption.Regular.GrayBase75"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_view_medium"
        android:layout_marginEnd="@dimen/space_view_medium"
        android:text="33 anos"
        android:layout_marginTop="@dimen/space_view_little"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView"
        app:layout_constraintStart_toEndOf="@+id/profileImageView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:viewBindingIgnore="true"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cpfTextView"
        style="@style/UIToolkit.Text.Caption.Regular.GrayBase75"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_view_medium"
        android:layout_marginEnd="@dimen/space_view_medium"
        android:text="028.020.145-10"
        app:layout_constraintTop_toBottomOf="@+id/ageTextView"
        android:layout_marginTop="@dimen/space_view_little"
        app:layout_constraintStart_toEndOf="@+id/profileImageView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:viewBindingIgnore="true"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_share_24"
        android:background="@drawable/item_selector"/>


</androidx.constraintlayout.widget.ConstraintLayout>