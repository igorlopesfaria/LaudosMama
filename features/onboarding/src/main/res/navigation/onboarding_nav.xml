<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_onboarding"
    app:startDestination="@id/onboarding_splash">

    <fragment
        android:id="@+id/onboarding_splash"
        android:name="br.com.laudosmama.onboarding.splash.view.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/onboarding_fragment_splash">
        <action
            android:id="@+id/action_welcome"
            app:destination="@id/onboarding_welcome"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/onboarding_welcome"
        android:name="br.com.laudosmama.onboarding.welcome.WelcomeFragment"
        android:label="WelcomeFragment"
        tools:layout="@layout/onboarding_fragment_welcome">
        <action
            android:id="@+id/action_login"
            app:destination="@id/onboarding_login"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"
            app:popUpToInclusive="false"/>
        <action
            android:id="@+id/action_register"
            app:destination="@id/onboarding_register"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"
            app:popUpToInclusive="false"/>
    </fragment>

    <fragment
        android:id="@+id/onboarding_login"
        android:name="br.com.laudosmama.onboarding.login.view.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/onboarding_fragment_login">
        <action
            android:id="@+id/action_register"
            app:destination="@id/onboarding_register"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"
            app:popUpToInclusive="false"/>
        <action
            android:id="@+id/action_reset_password"
            app:destination="@id/onboarding_reset_password"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"
            app:popUpToInclusive="false"/>
    </fragment>

    <fragment
        android:id="@+id/onboarding_register"
        android:name="br.com.laudosmama.onboarding.register.view.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/onboarding_fragment_register">
        <action
            android:id="@+id/action_login"
            app:destination="@id/onboarding_login"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"
            app:popUpToInclusive="false"/>
    </fragment>
    <fragment
        android:id="@+id/onboarding_reset_password"
        android:name="br.com.laudosmama.onboarding.resetpassword.view.ResetPasswordFragment"
        android:label="ResetPasswordFragment"
        tools:layout="@layout/onboarding_fragment_reset_password">
        <action
            android:id="@+id/action_login"
            app:destination="@id/onboarding_login"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"
            app:popUpToInclusive="false"/>
    </fragment>

</navigation>
